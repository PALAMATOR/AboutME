@import "../../library.blocks/mixins/container/container.styl"

.slider
  {container}
  {container__column}
  margin .5rem
  &__box
    {container}
    justify-content start
    margin-bottom .15rem
  &__flag
    position relative
    width 16px
    height 14px
    left 0
    background-image url(res/img/Flag.png)
    border none
  &__value
    &-line
      width 100%
      height 3px
      background-image url(res/img/Line.png)
      border none
    &-label
      &-box
        {container}
        justify-content space-between
        margin-bottom .2rem
      &-item
        min-width 3.5rem
        max-width 8.5rem
        width auto
        height 2rem
        font-family PT_big
        font-weight 700
        font-size .575rem
        line-height 1.2rem
        text-align start
        color #2f1b15
        margin-right 1rem
        &:last-child
          margin-right 0
          &::before
            margin-left auto
            background-repeat repeat
        &:first-child
          &::before
            background-repeat repeat
        &::before
          content ''
          display block
          position relative
          width 3px
          height 1rem
          background url(res/img/Grade.png) 100% 0 no-repeat
          border none
