.radiobutton
  justify-content start
  &__item
    width auto
    @media screen and (max-width: 600px)
      width 100%
    input
      display none
      & + label::before
        content ''
        display flex
        position relative
        bottom .3rem
        width 28px
        height 28px
        margin-right .15rem
        background url('res/img/CheckBox&RadioButton.png') -56px center no-repeat
      &:checked + label::before
        background url('res/img/CheckBox&RadioButton.png') -84px center no-repeat
    label
      display flex
      font-family PT_big
      color #2f1b15
      font-weight 700
      font-size .9rem
      padding .45rem
